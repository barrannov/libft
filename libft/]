#include "libft.h"

int amount_d(int n)
{	
	int i;
	if(n < 0)
	{
		n = -n;
		i++;
	}
	if(n > 9)
	{
		i++;
		amount_d(n % 10);
		amount_d(n / 10);
	}
	else 
		i++;
	return (i);
}

int min(int n)
{
	if(n < 0)
		n = -n;
	return (n);
}

char * ft_itoa(int n)
{
	char *res;
	int len;

	len = amount_d(n);
	n = min(n);
	res = (char *)malloc(sizeof(res) * (len + 1));
	res[len--] = '\0';
	while(len)
	{
		res[len--] = n % 10 + 48;
		n = n % 10;
	}	
	if (n < 0)
		res[0] = '-';
	return (res);
}

int main()
{
	printf("ft_itoa - >>>>>>>>>>>>\n%s\n-----------------\n", ft_itoa(12));
	return (0);
}
